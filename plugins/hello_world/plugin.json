{
  "name": "hello_world",
  "version": "1.0.0",
  "author": "Example Author",
  "description": "一个简单的示例插件，演示插件系统的基本功能",
  "entry_point": "main",
  "permissions": ["access_editor", "access_ui"],
  "dependencies": [],
  "config_schema": {
    "greeting_message": {
      "type": "string",
      "default": "Hello, World!",
      "description": "插件显示的问候消息"
    },
    "show_on_startup": {
      "type": "boolean",
      "default": true,
      "description": "是否在启动时显示问候消息"
    }
  }
}